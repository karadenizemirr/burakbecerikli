    <script src="/assets/js/script.js"></script>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-transparent container p-3">
        <a class="navbar-brand logo primary-color" href="/">DATABUZZ</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="/search"><i class="fas fa-search"></i>Arama Yap</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/result"><i class="fas fa-database"></i>Verileri Göster</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#"><i class="fas fa-plus"></i>Modül Ekle</a>
                </li>
                {{#if isLogin}}
                <li class="nav-item">
                    <a class="nav-link" href="/user/logout"><i class="fas fa-sign-out-alt"></i>Çıkış Yap</a>
                </li>
                {{/if}}
            </ul>
        </div>
    </nav>

    <div class="container">
        {{{body}}}
    </div>
    <script>
        function toggleNavbar() {
            const navbar = document.getElementById('navbarNav');
            navbar.classList.toggle('show');
        }

        const navbarToggler = document.querySelector('.navbar-toggler');
        navbarToggler.addEventListener('click', toggleNavbar);

    </script>
</body>

</html>